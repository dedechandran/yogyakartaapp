<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_article_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_8dp"
    app:cardCornerRadius="@dimen/corner_all_16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/imageView_movie_image"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:background="@color/colorDarkGrey"
            app:layout_constraintBottom_toTopOf="@id/textView_movie_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_movie_date"
            style="@style/TextAppearance.MaterialComponents.Overline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all_8dp"
            android:background="@color/colorDarkGrey"
            android:padding="@dimen/padding_all_8dp"
            app:layout_constraintBottom_toTopOf="@id/textView_movie_title"
            app:layout_constraintEnd_toEndOf="@id/imageView_movie_image"
            app:layout_constraintStart_toStartOf="@id/imageView_movie_image"
            app:layout_constraintTop_toBottomOf="@id/imageView_movie_image" />

        <TextView
            android:id="@+id/textView_movie_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorDarkGrey"
            android:layout_marginTop="@dimen/margin_all_8dp"
            android:paddingStart="@dimen/padding_all_8dp"
            android:paddingEnd="@dimen/padding_all_8dp"
            android:paddingBottom="@dimen/padding_all_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textView_movie_date"
            app:layout_constraintStart_toStartOf="@id/textView_movie_date"
            app:layout_constraintTop_toBottomOf="@id/textView_movie_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>